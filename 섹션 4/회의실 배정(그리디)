import sys
sys.stdin=open("input4.txt", "rt")
n=int(input())
meeting=[]
for i in range(n):
    s,e=map(int,input().split())
    meeting.append((s,e)) #튜플형태로 append
meeting.sort(key=lambda x : (x[1],x[0])) #정렬하는 Key 기준은 Lambda,x를 인수로 받고
#x[1]을 첫순, x[을] 끝순으로 받아라
#meeting.sort() , 이 경우에는 첫 순서로

et=0 #끝나는 시간
cnt=0 #답
for s, e in meeting:
    if s>=et: #만약 시작하는 시간이 et보다 크거나 같다면,
       et=e 
       cnt+=1
print(cnt)
