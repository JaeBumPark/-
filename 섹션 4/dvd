import sys
sys.stdin=open("input4.txt", "rt")
n, k=map(int, input().split())
music= list(map(int, input().split()))
lt=0
rt=sum(music)
dvd=0

def Count(capacity):
    cnt=1
    sum=0
    for x in music:
        if sum+x>capacity:
            cnt+=1
            sum=x
        else:
            sum+=x
    return cnt

while lt<=rt:
    mid=(lt+rt)//2
    if Count(mid)<=k:
        dvd=mid
        rt=mid-1
    else:
        lt=mid+1
print(dvd)        
               